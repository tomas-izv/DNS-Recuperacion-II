// Zona directa
zone "olimpo.test" {
    type master;
    file "/etc/bind/olimpo.test.dns";
    allow-transfer { 192.168.57.11; };
    notify yes;
};

// Zona inversa
zone "57.168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/192.168.57.dns";
    allow-transfer { 192.168.57.11; };
};